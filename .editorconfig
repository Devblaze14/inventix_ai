root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,js,ts,jsx,tsx,json,yml,yaml,md}]
indent_style = space
indent_size = 2

[*.py]
indent_size = 4

[*.{bat,cmd}]
end_of_line = crlf
charset = utf-8

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
