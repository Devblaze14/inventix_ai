# Inventix AI - Environment Configuration
# Copy this file to .env and fill in your values

# Gemini API Configuration (REQUIRED)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=false

# Security
SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=120

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# CORS - Add your Vercel frontend URL here (comma-separated)
# Example: CORS_ORIGINS=http://localhost:5173,https://inventix-ai.vercel.app
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ---- FRONTEND (Vite) Environment Variables ----
# Set VITE_API_URL in Vercel Dashboard > Settings > Environment Variables
# pointing to your deployed backend URL (e.g. https://inventix-ai.onrender.com/api)
VITE_API_URL=http://127.0.0.1:8000/api
